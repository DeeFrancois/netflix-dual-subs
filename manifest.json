{
    "manifest_version": 2,
  
    "name": "Netflix Language Learning Subtitles",
    "description": "Enables dual language subtitles for Netflix",
    "version": "1.0",

    "icons": {
      "128":"icons/new_icon128.png",
      "48":"icons/new_icon48.png",
      "32":"icons/new_alticon32.png",
      "24":"icons/new_alticon24.png",
      "16":"icons/new_alticon16.png"
    },

    "background": {
        "scripts": ["jquery-3.5.1.min.js","background.js"]
    },
  
    "permissions": [
        "storage","webNavigation","https://www.netflix.com/*"
      ],

    "browser_action": {
     "default_icon": "icons/new_alticon32.png",
     "default_popup": "popup.html"

    }

  }